.page-header
  h1 {{type | capitalize}} articles 
    small 
      span.badge(data-toggle="modal", data-target="#modFeed") {{articles.length}}
.modal.fade#modFeed(tabindex="-1", role="dialog", aria-labelledby="Edit feed", aria-hidden="true")
  .modal-dialog
    .modal-content
      .modal-header
        button.close(type="button", data-dismiss="modal", aria-hidden="true") &times;
        h4#modFeedLbl.modal-title Edit feed
      .modal-body
        form(role='form', name='editFeedForm')
          input(type='hidden')
          .form-group
            label(for='editUrl') URL
            input.form-control#editUrl(type="text", name="editUrl", placeholder='Enter URL', size='60', ng-model="editFeed.url", required) 
          | &nbsp;
          .form-group
            label(for='editCat', size='30') Name
            input.form-control#editName(type="text", name="editName", placeholder='Enter name', ng-model="editFeed.name") 
          .form-group
            label(for='editCat', size='30') Category {{categoryDropDown.selected}}
            ui-select(id='editCat',ng-model='categoryDropDown.selected', theme='bootstrap', ng-disabled='disabled', reset-search-input='false', style='width: 100%;')
              ui-select-match(placeholder='Enter an category...') {{$select.selected.name}}
              ui-select-choices(repeat='category in categorys | filter: $select.search', refresh='refreshAddresses($select.search.name)', refresh-delay='0')
                div(ng-bind-html='category.name | highlight: $select.search')
          .form-group
            label(for='editLocation', size='30') Location {{locationDropDown.selected}}
            ui-select(id='editLocation',ng-model='locationDropDown.selected', theme='bootstrap', ng-disabled='disabled', reset-search-input='false', style='width: 100%;')
              ui-select-match(placeholder='Enter an address...') {{$select.selected.name}}
              ui-select-choices(repeat='location in locations | filter: $select.search', refresh='refreshAddresses($select.search.name)', refresh-delay='0')
                div(ng-bind-html='location.name | highlight: $select.search')
          h3 Tags
            .button(ngf-select='', ngf-change='upload($files,$event,$testing)', ngf-multiple='false') Select File {{testing}}
            li(ng-repeat='f in files', style='font:smaller') {{f.name}}
            ui-select(multiple='', ng-model='selectTags.selectedTag', theme='bootstrap', ng-disabled='disabled', style='width: 100%;')
              ui-select-match(placeholder='Select Tags...') {{$item.name}}
              ui-select-choices(repeat='tag in tags | filter: $select.search')
                div(ng-bind-html='tag.name | highlight: $select.search')
                    
      .modal-footer
        button.btn.btn-default(type="button", data-dismiss="modal") Close
        button.btn.btn-primary(type="button", ng-click='update()') Save

#form-feed
  form.form-horizontal(role='form', name='searchForm')
    .form-group
      .col-xs-2.hidden-xs
        select.input-sm.form-control#search-feed(name="searchFeed", ng-model="search.feed", ng-options='feed.name for feed in feeds')
          option(value="") -- select feed --
      .col-xs-3.hidden-xs
        input.input-sm.form-control#search-text(type="text", name="searchText", placeholder='Enter Text', size='30', ng-model="search.text") 
      .col-xs-7
        .btn-group.btn-group-sm.pull-right
          button.btn.btn-primary(type="button", ng-click='refresh()')
            i.glyphicon.glyphicon-refresh
            |  Refresh
          button.btn.btn-primary(type="button", ng-click='ensureReadAll()')
            i.glyphicon.glyphicon-folder-open
            |  Read all
p(ng-show='articles.length == 0') No such articles.
.panel-group#accArticles
  .panel.panel-default(ng-repeat='article in articles | filter:search.text | feedSelected:search.feed')
    .panel-heading()
      h4(ng-class="(article.read == true) ? 'panel-title article-read' : 'panel-title'")
        a(data-toggle='collapse', data-parent='#accArticles', href="#article-{{$index}}", onclick='return false;') {{article.title | limitTo:50}}
        small.pull-right.article-tb
          span {{article.date | timeago}}
          span
            span.label.label-info {{article._feed[0].name}}
          span
            a(href="{{article.link}}", target='new')
              i.glyphicon.glyphicon-globe
          span
            a(href="{{article.link}}", target='new')
              i.glyphicon.glyphicon-trash
          span
            a(href="", ng-click="read($index)", ng-class="(article.read == false) ? 'selected' : 'unselected'")
              i.glyphicon.glyphicon-ok-sign
          span
            a(href="", ng-click="star($index)", ng-class="(article.starred == true) ? 'selected' : 'unselected'")
              i(ng-class="(article.starred == true) ? 'glyphicon glyphicon-star' : 'glyphicon glyphicon-star-empty'")
    .panel-collapse.collapse(id="article-{{$index}}")
      .panel-body
        div(ng-bind-html="article.summary")