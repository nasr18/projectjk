          label
            input(type='checkbox', ng-model='staff.updateTags')
            |   Update
          &nbsp;&nbsp;
          label
            input(type='checkbox', ng-model='staff.delTags')
            |   Delete
        td
          label
            input(type='checkbox', ng-model='staff.addLocations')
            |   Add
          &nbsp;&nbsp;
          label
            input(type='checkbox', ng-model='staff.updateLocations')
            |   Update
          &nbsp;&nbsp;
          label
            input(type='checkbox', ng-model='staff.delLocations')
            |   Delete
        td
          label
            input(type='checkbox', ng-model='staff.addStaffs')
            |   Add
