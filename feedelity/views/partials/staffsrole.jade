    thead
      tr
        th Username
        th Feeds
        th Articles
        th Categories
        th Tags
        th Locations
        th Staffs
        th Action
    tbody
      tr(ng-repeat='staff in staffs track by $index | filter:searchText')
        td {{staff.username}}
        td
          label
            input(type='checkbox', ng-model='staff.addFeeds')
